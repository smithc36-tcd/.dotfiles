bar {
        status_command i3status
        tray_output none
        colors {
            background $black1
            statusline $white2
            separator $white2

           # border  background  text
        focused_workspace   $background  $red2       $black1
        active_workspace    $black2      $black1     $white2
        inactive_workspace  $black1      $black2     $foreground
        urgent_workspace    $red1        $red1       $white2 

              

        }



